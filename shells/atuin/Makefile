OPTIONS_DEFINE=DOCS

PLIST_FILES=bin/atuin

PORTDOCS=	\
	config.md \
	import.md \
	key-binding.md \
	list.md \
	search.md \
	server.md \
	stats.md \
	sync.md

post-install:
	${STRIP_CMD} ${STAGEDIR}${PREFIX}/bin/atuin

post-install-DOCS-on:
		@${MKDIR} ${STAGEDIR}${DOCSDIR}
		cd ${WRKSRC}/docs && ${INSTALL_DATA} ${PORTDOCS} ${STAGEDIR}${DOCSDIR}

